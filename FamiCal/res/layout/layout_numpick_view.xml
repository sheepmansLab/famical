<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <EditText
            android:id="@+id/etCount"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:maxLength="2"
            android:textSize="15sp"
            android:inputType="number"/>

        <Button
            android:id="@+id/btnNumpickUp"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_toEndOf="@+id/etCount"
            android:layout_alignTop="@+id/etCount"
            android:gravity="center_horizontal|top"
            android:textSize="12sp"
            android:text="@string/lblMarkUp" />

        <Button
            android:id="@+id/btnNumpickDown"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_toEndOf="@+id/etCount"
            android:layout_alignBottom="@+id/etCount"
            android:gravity="center_horizontal|bottom"
            android:textSize="12sp"
            android:text="@string/lblMarkDown" />
    
</RelativeLayout>
